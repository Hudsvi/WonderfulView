<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgressBarView">
        <!--进度条圆形背景-->
        <attr name="circleBgColor" format="color" />

        <!--中心文本相关属性-->
        <attr name="centerTextSize" format="dimension" />
        <attr name="centerTextColor" format="color" />
        <attr name="isCenterEnabled" format="boolean" />

        <!--进度条的颜色-->
        <attr name="progressBgColor" format="color" />

        <!--进度条宽度-->
        <attr name="strokeWidth" format="dimension" />

        <!--动画时长-->
        <attr name="duration" format="integer" />

    </declare-styleable>

    <declare-styleable name="ProgressBarView">
        <!--进度条底层背景-->
        <attr name="bgBarColor" format="color" />
        <!--进度条颜色-->
        <attr name="progressBarColor" format="color" />
        <!--进度条粗细-->
        <attr name="barThickness" format="dimension" />
        <!--是否展示文本进度框-->
        <attr name="showingText" format="boolean"/>
        <!--文本字体大小-->
        <attr name="textSize" format="dimension" />
        <!--文本字体颜色-->
        <attr name="textColor" format="color" />
        <!--文本框背景-->
        <attr name="textBgColor" format="color" />
        <!--文本框尺寸-->
        <attr name="textHeight" format="dimension" />
        <attr name="textWidth" format="dimension" />
        <!--进度条离文本框的边距-->
        <attr name="barMarginTop" format="dimension" />
        <attr name="triangleHeight" format="dimension" />
    </declare-styleable>
</resources>